<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%x] %c{1} %m%n"/>
        </layout>
    </appender>

    <appender name="trace" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/home/rajith/sliit/research/vigraha-logs/reporting-rule-engine-trace.log"/>
        <param name="Threshold" value="debug"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p [%t] %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="error" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/home/rajith/sliit/research/vigraha-logs/reporting-rule-engine-error.log"/>
        <param name="Threshold" value="error"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p [%t] %c{1} - %m%n"/>    
        </layout>
    </appender>

    <logger name="vigraha.dataloader">
        <level value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="trace"/>
        <appender-ref ref="error"/>
    </logger>

    <logger name="sun.net">
        <level value="ERROR"/>
    </logger>

    <logger name="org">
        <level value="WARN"/>
    </logger>

    <logger name="org.springframework">
        <level value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="trace"/>
    </logger>

    <logger name="com">
        <level value="ERROR"/>
    </logger>

    <root>
        <priority value="error"/>
        <appender-ref ref="error"/>
    </root>

</log4j:configuration>

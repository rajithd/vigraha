<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:rule-engine.properties"/>

    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <!--Driver name to connect to the database-->
        <property name="driverClass">
            <value>${vigraha.jdbc.driver}</value>
        </property>
        <!--DB URL-->
        <property name="jdbcUrl">
            <value>${vigraha.url}</value>
        </property>
        <!--DB User used to connect to the schema-->
        <property name="user">
            <value>${vigraha.username}</value>
        </property>
        <!--Password required to access for the above user-->
        <property name="password">
            <value>${vigraha.password}</value>
        </property>
        <!-- configuration pool via c3p0-->
        <property name="acquireIncrement">
            <value>${vigraha.c3p0.acquireIncrement}</value>
        </property>
        <property name="idleConnectionTestPeriod">
            <value>${vigraha.c3p0.idleConnectionTestPeriod}</value>
            <!-- seconds -->
        </property>
        <property name="maxPoolSize">
            <value>${vigraha.c3p0.maxPoolSize}</value>
        </property>
        <property name="maxStatements">
            <value>${vigraha.c3p0.maxStatements}</value>
        </property>
        <property name="minPoolSize">
            <value>${vigraha.c3p0.minPoolSize}</value>
        </property>
        <property name="initialPoolSize">
            <value>${vigraha.c3p0.initialPoolSize}</value>
        </property>
        <property name="maxIdleTime">
            <value>${vigraha.c3p0.maxIdleTime}</value>
        </property>
        <property name="acquireRetryAttempts">
            <value>${vigraha.c3p0.acquireRetryAttempts}</value>
        </property>
        <property name="acquireRetryDelay">
            <value>${vigraha.c3p0.acquireRetryDelay}</value>
        </property>
        <property name="breakAfterAcquireFailure">
            <value>${vigraha.c3p0.breakAfterAcquireFailure}</value>
        </property>
    </bean>

    <bean id="jdbcTemplate"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>

    <!-- Spring Data Access Exception Translator Defintion -->
    <bean id="jdbcExceptionTranslator" class="org.springframework.jdbc.support.SQLErrorCodeSQLExceptionTranslator">
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>

    <bean id="scheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="promotionRuleFindServiceTrigger"/>
                <ref bean="promotionRuleExecuteServiceTrigger"/>
            </list>
        </property>
    </bean>

    <bean id="promotionRuleFindServiceTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="promotionRuleFindManager"/>
        <property name="cronExpression" value="${promotion.rule.find.executor.cron.expression}"/>
    </bean>

    <bean id="promotionRuleExecuteServiceTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="promotionRuleExecuteManager"/>
        <property name="cronExpression" value="${promotion.rule.execute.cron.expression}"/>
    </bean>

    <bean id="promotionRuleFindManager"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="promotionRuleFindObject"/>
        </property>
        <property name="targetMethod">
            <value>execute</value>
        </property>
    </bean>

    <bean id="promotionRuleExecuteManager"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="promotionRuleExecuteObject"/>
        </property>
        <property name="targetMethod">
            <value>execute</value>
        </property>
    </bean>


    <bean id="promotionRuleFindObject" class="vigraha.rule.service.impl.PromotionRuleFinderExecutorImpl">
        <property name="poolSize">
            <value>${promotion.rule.find.executor.thread.pool.size}</value>
        </property>
        <property name="ruleFindRepository" ref="promotionRuleFindRepositoryImpl"/>
    </bean>

    <bean id="promotionRuleExecuteObject" class="vigraha.rule.service.impl.PromotionRuleExecutorImpl">
        <property name="poolSize">
            <value>${promotion.rule.execute.thread.pool.size}</value>
        </property>
        <property name="promotionRuleExecutorRepository" ref="promotionRuleExecutorRepository"/>
    </bean>

    <bean id="promotionRuleFindRepositoryImpl" class="vigraha.rule.repository.impl.PromotionRuleFindRepositoryImpl">
        <property name="jdbcTemplate">
            <ref bean="jdbcTemplate"/>
        </property>
    </bean>
    
    <bean id="promotionRuleExecutorRepository" class="vigraha.rule.repository.impl.PromotionRuleExecutorRepository">
        <property name="jdbcTemplate"  ref="jdbcTemplate"/>
    </bean>


</beans>